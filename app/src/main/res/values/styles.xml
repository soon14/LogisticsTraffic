<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/page_bg_color</item>
    </style>
    <!--=======================================================================================-->

    <!-- 横线样式-->
    <style name="line_style_horizontal">
        <item name="android:layout_height">4px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/def_line</item>
    </style>

    <style name="AnimationFadeRight" parent="android:Animation">
        <!--   PopupWindow左右弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AnimationFadeTop" parent="android:Animation">
        <!--   PopupWindow上下弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>


    <!-- 自定义dialog样式-->
    <style name="app_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/mask_black</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- 默认按钮样式-->
    <style name="default_btn_style">
        <item name="android:background">@drawable/base_btn_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="length_btn_style" parent="default_btn_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="def_btn_style_12sp" parent="default_btn_style">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 文本样式 带选中效果  黑色 变 白色-->
    <style name="black_while_text_style">
        <item name="android:background">@drawable/while_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/black_while_color_selector</item>
    </style>

    <!-- TextView 样式-->
    <style name="base_def_tx_style">
        <item name="android:textColor">@color/main_bg_color</item>
    </style>

    <style name="base_while_tx_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 任何状态下都是黑色-->
    <style name="base_black_tx_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 有选中状态的字体颜色 -->
    <style name="base_black_while_tx_style">
        <item name="android:textColor">@color/black_while_color_selector</item>
    </style>

    <style name="def_tx_style_18sp" parent="base_def_tx_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="while_tx_style_18sp" parent="base_while_tx_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="while_tx_style_12sp" parent="base_while_tx_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="black_tx_style_18sp" parent="base_black_tx_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="black_tx_style_12sp" parent="base_black_tx_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="black_tx_12_style.source_detail" parent="black_tx_style_12sp">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <!--=======================================================================================-->
    <style name="title_style">
        <item name="android:background">@color/main_bg_color</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tx_black_df_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tx_order_style" parent="tx_black_df_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="tx_gray_12sp_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#b3b3b3</item>
    </style>

    <!-- 详情页用 默认字体-->
    <style name="detail_df_tx_style" parent="tx_black_df_style">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 详情页用 默认小字体-->
    <style name="detail_smail_tx_style" parent="tx_black_df_style">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- 详情页用 有边框效果-->
    <style name="table_tx_style" parent="detail_smail_tx_style">
        <item name="android:layout_marginTop">2px</item>
        <item name="android:layout_marginLeft">2px</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="setting_item_style" parent="tx_black_df_style">
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="login_big_title" parent="title_style">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#b3b3b3</item>
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="button_style" parent="default_btn_style">
        <item name="android:padding">3dp</item>
    </style>

    <style name="home_button_style" parent="default_btn_style">
        <item name="android:background">@drawable/home_btn_selector</item>
    </style>

    <style name="orange_btn_style">
        <item name="android:background">@drawable/home_btn_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#fff</item>
    </style>


    <style name="orange_btn_noPadding_style">
        <item name="android:background">@drawable/home_btn_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="pop_while_mask_18sp_btn">
        <item name="android:background">@drawable/location_pop_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="while_orange_btn_style">
        <item name="android:background">@drawable/white_orange_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/black_while_color_selector</item>
    </style>
    <!--车源信息 -->
    <style name="transparent_orange_btn_style">
        <item name="android:background">@drawable/transparent_orange_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_while_color_selector</item>
    </style>

    <style name="while_orange_tab_style">
        <item name="android:background">@drawable/bottom_black_tab_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/tab_color_selector</item>
    </style>

    <style name="register_button_style" parent="button_style">
        <item name="android:textColor">@color/main_bg_color</item>
        <item name="android:background">@drawable/white_orange_selector</item>
    </style>

    <style name="tip_small">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_bottom_title">
        <item name="android:background">@drawable/home_btn_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="location_default">
        <item name="android:background">@drawable/orange_grey_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="location_info_title_style" parent="location_info_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="location_info_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="location_list_smail" parent="location_default">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="dialog_tip_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_tx_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_hint_style" parent="dialog_tx_style">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="dialog_number_style">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/main_bg_color</item>
    </style>

    <style name="select_licence_btn_style">
        <item name="android:background">@drawable/white_orange_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black_while_color_selector</item>
    </style>


    <!-- 自定义星级条样式          ?android:attr/ratingBarStyleSmall  -->
    <style name="RatingBar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_gold</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="RatingBar_small_style" parent="RatingBar_style">
        <item name="android:progressDrawable">@drawable/ratingbar_gold_smail</item>
        <item name="android:minHeight">15dp</item>
    </style>

    <!-- 自定义 switch 样式-->
    <style name="setting_switch_theme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AnimationFade" parent="android:Animation">
        <!--   PopupWindow左右弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/in_right</item>
        <item name="android:windowExitAnimation">@anim/out_right</item>

    </style>

    <!-- TextView 样式-->
    <style name="orange_tx_style">
        <item name="android:textColor">@color/main_bg_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="black_tx_18_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_style">
        <item name="android:background">@color/main_bg_color</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tx_black_df_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tx_gray_12sp_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#b3b3b3</item>
    </style>

    <!-- 详情页用 默认字体-->
    <style name="detail_df_tx_style" parent="tx_black_df_style">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 详情页用 默认小字体-->
    <style name="detail_smail_tx_style" parent="tx_black_df_style">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- 详情页用 有边框效果-->
    <style name="table_tx_style" parent="detail_smail_tx_style">
        <item name="android:layout_marginTop">2px</item>
        <item name="android:layout_marginLeft">2px</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="setting_item_style" parent="tx_black_df_style">
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="login_big_title" parent="title_style">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#b3b3b3</item>
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/base_btn_selector</item>
    </style>

    <style name="home_button_style" parent="button_style">
        <item name="android:background">@drawable/home_btn_selector</item>
    </style>

    <style name="orange_btn_style">
        <item name="android:background">@drawable/home_btn_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="while_orange_btn_style">
        <item name="android:background">@drawable/while_orange_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/black_while_color_selector</item>
    </style>

    <style name="register_button_style" parent="button_style">
        <item name="android:textColor">@color/main_bg_color</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="tip_small">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_bottom_title">
        <item name="android:background">@drawable/home_btn_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="location_default">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="location_info_title_style" parent="location_info_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="location_info_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="location_list_smail" parent="location_default">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="dialog_tip_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_tx_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_hint_style" parent="dialog_tx_style">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="dialog_number_style">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/main_bg_color</item>
    </style>


    <!--重写系统弹出Dialog -->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <!-- <item name="android:windowFrame">@null</item>
         <item name="android:windowIsFloating">true</item>
         <item name="android:windowIsTranslucent">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--除去title-->
        <!--<item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>&lt;!&ndash;除去背景色&ndash;&gt;-->
    </style>

    <!-- 自定义星级条样式          ?android:attr/ratingBarStyleSmall  -->
    <style name="RatingBar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_gold</item>
        <item name="android:minHeight">60px</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>

</resources>

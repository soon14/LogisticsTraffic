<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dl_input_length_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:hint="长" />
        <TextView
            style="@style/black_tx_style_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X "/>
        <EditText
            android:id="@+id/dl_input_width_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true"
            android:hint="宽" />
        <TextView
            style="@style/black_tx_style_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X "/>
        <EditText
            android:id="@+id/dl_input_height_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:hint="高" />
        <TextView
            style="@style/black_tx_style_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 方 "/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/main_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dl_cancel_bt"
            style="@style/while_orange_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="取消" />

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:background="@color/main_bg_color" />

        <Button
            android:id="@+id/dl_confirm_bt"
            style="@style/while_orange_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="确定" />
    </LinearLayout>


</LinearLayout>
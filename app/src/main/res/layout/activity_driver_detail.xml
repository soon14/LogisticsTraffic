<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bt.zhangzy.logisticstraffic.activity.DriverDetailActivity">
    <!-- 司机详情 -->

    <include layout="@layout/page_top" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:padding="10dp"
            android:stretchColumns="1,3">

            <TableRow android:layout_width="wrap_content">

                <TextView
                    style="@style/base_black_tx_style"
                    android:text="姓名：" />

                <TextView
                    android:id="@+id/driver_detail_name_tx"
                    style="@style/base_black_tx_style"
                    android:hint="司机姓名" />


            </TableRow>

            <TableRow>

                <TextView
                    style="@style/base_black_tx_style"
                    android:text="手机号：" />

                <TextView
                    android:id="@+id/driver_detail_num_tx"
                    style="@style/base_black_tx_style"
                    android:hint="司机手机号码" />


            </TableRow>

            <TableRow>

                <TextView
                    style="@style/base_black_tx_style"
                    android:text="常驻地：" />

                <TextView
                    android:id="@+id/driver_detail_location_tx"
                    style="@style/base_black_tx_style"
                    android:hint="司机常驻地址" />


            </TableRow>


        </TableLayout>


        <ImageView
            android:id="@+id/driver_detail_photo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/picture_upload" />

        <ImageView
            android:id="@+id/driver_detail_id_card_photo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/picture_upload" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/driver_detail_del_bt"
            style="@style/default_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onClick_Delete"
            android:layout_weight="1"
            android:text="删除" />

        <Button
            style="@style/default_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onClick_Submit"
            android:layout_weight="1"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>
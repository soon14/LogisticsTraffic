<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/spread_3_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1px">


        <ImageButton
            android:id="@+id/spread_item_7_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="3"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/fake_spread_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/spread_item_8_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/fake_spread_2"
                android:text="图片" />


            <ImageButton
                android:id="@+id/spread_item_9_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/fake_spread_3"
                android:text="图片" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2px"
        android:background="#bb999999"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="今日推荐" />


</RelativeLayout>
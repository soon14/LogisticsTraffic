<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- dialog 封装 多按钮选择 -->
    <TextView
        android:id="@+id/dialog_choose_title"
        style="@style/orange_tx_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="请选择货物类型" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/main_bg_color" />

    <GridLayout
        android:id="@+id/dialog_choose_item_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:columnCount="3">

        <!-- 由代码动态添加-->
        <!--<include layout="@layout/choose_item_button"/>-->

    </GridLayout>
    <Button
        android:id="@+id/dialog_choose_select_finish_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/length_btn_style"
        android:text="确认选择"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="80dp"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            style="@style/location_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="选择省份"
            android:textColor="@color/black" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/main_bg_color">

            <EditText
                style="@style/edit_style"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="请输入搜索名称" />

            <Button
                android:id="@+id/popupwindow_back"
                style="@style/location_default"
                android:layout_width="wrap_content"
                android:background="@drawable/home_btn_selector"
                android:text="返回" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="GPS定位城市"
            android:textColor="@color/main_bg_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/location_network_tx"
            style="@style/location_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:text="正在定位..." />

        <ListView
            android:id="@+id/location_city_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/transparent">

        </ListView>
    </LinearLayout>
</LinearLayout>
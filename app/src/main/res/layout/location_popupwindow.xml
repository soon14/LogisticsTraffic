<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="80dp"
        android:background="@color/main_bg_color"
        android:orientation="vertical">


        <TextView
            style="@style/while_tx_18_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/main_bg_color"
            android:gravity="center"
            android:text="选择省份" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:orientation="horizontal">

            <EditText
                style="@style/edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入搜索名称" />

            <Button
                android:id="@+id/popupwindow_back"
                style="@style/location_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_btn_selector"
                android:text="返回" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="GPS定位城市"
            android:textColor="@color/main_bg_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/location_network_tx"
            style="@style/while_tx_18_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:text="正在定位..." />

        <ListView
            android:id="@+id/location_city_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/white"
            android:background="@color/white"
            android:listSelector="@color/white">

        </ListView>
    </LinearLayout>
</LinearLayout>
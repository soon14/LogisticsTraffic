<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/page_top" />
        <Button
            android:id="@+id/line_detail_remove_bt"
            style="@style/default_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="onClick_RemoveLine"
            android:text="删除"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/tx_black_df_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货人信息"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:shrinkColumns="1"
                android:stretchColumns="1">

                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        style="@style/tx_order_style"
                        android:gravity="right"
                        android:text="地址:" />


                    <TextView
                        android:id="@+id/line_detail_consignor_city"
                        style="@style/tx_order_style"
                        android:background="@drawable/line_tx_shape"
                        android:clickable="true"
                        android:hint="点击选择省市"
                        android:onClick="onClick_ChangeLocation" />

                </TableRow>

                <!--<View style="@style/line_style_horizontal" />-->
                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <EditText
                        android:id="@+id/line_detail_consignor_address"
                        style="@style/tx_order_style"
                        android:layout_column="1"
                        android:background="@drawable/line_tx_shape"
                        android:clickable="true"
                        android:hint="详细地址"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:minLines="1"
                        android:maxLength="64"
                        android:singleLine="false"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        style="@style/tx_order_style"
                        android:gravity="right"
                        android:text="名字:" />

                    <EditText
                        android:id="@+id/line_detail_consignor_name"
                        style="@style/tx_order_style"
                        android:background="@drawable/line_tx_shape"
                        android:hint="发货人姓名"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="8"
                        android:singleLine="true" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        style="@style/tx_order_style"
                        android:gravity="right"
                        android:text="电话:" />

                    <EditText
                        android:id="@+id/line_detail_consignor_phone"
                        style="@style/tx_order_style"
                        android:background="@drawable/line_tx_shape"
                        android:hint="发货人电话"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true" />
                </TableRow>


            </TableLayout>
            <!--  收货人信息   -->
            <TextView
                style="@style/tx_black_df_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人信息"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:shrinkColumns="1"
                android:stretchColumns="1">

                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        style="@style/tx_order_style"
                        android:gravity="right"
                        android:text="地址:" />


                    <TextView
                        android:id="@+id/line_detail_receiver_city"
                        style="@style/tx_order_style"
                        android:background="@drawable/line_tx_shape"
                        android:clickable="true"
                        android:hint="点击选择省市"
                        android:onClick="onClick_ChangeLocation" />

                </TableRow>

                <!--<View style="@style/line_style_horizontal" />-->
                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <EditText
                        android:id="@+id/line_detail_receiver_address"
                        style="@style/tx_order_style"
                        android:layout_column="1"
                        android:background="@drawable/line_tx_shape"
                        android:clickable="true"
                        android:hint="详细地址"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:minLines="1"
                        android:maxLength="64"
                        android:singleLine="false"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        style="@style/tx_order_style"
                        android:gravity="right"
                        android:text="名字:" />

                    <EditText
                        android:id="@+id/line_detail_receiver_name"
                        style="@style/tx_order_style"
                        android:background="@drawable/line_tx_shape"
                        android:hint="收货人姓名"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="8"
                        android:singleLine="true" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        style="@style/tx_order_style"
                        android:gravity="right"
                        android:text="电话:" />

                    <EditText
                        android:id="@+id/line_detail_receiver_phone"
                        style="@style/tx_order_style"
                        android:background="@drawable/line_tx_shape"
                        android:hint="收货人电话"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:singleLine="true" />
                </TableRow>


            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/line_list_submit"
        style="@style/order_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:onClick="onClick_Submit"
        android:text="保存并使用" />
</LinearLayout>
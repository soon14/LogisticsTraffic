<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/order_dialog_location_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center_horizontal">

        <TableRow android:gravity="center_horizontal">

            <TextView
                style="@style/orange_tx_style"
                android:layout_marginEnd="20dp"
                android:text="省/直辖市" />

            <TextView
                style="@style/orange_tx_style"
                android:layout_marginStart="20dp"
                android:text="市/区" />
        </TableRow>

        <TableRow android:gravity="center_horizontal">

            <TableLayout
                android:id="@+id/location_province_ly">

                <Button
                    android:id="@+id/location_province_1"
                    style="@style/pop_while_mask_18sp_btn"
                    android:text="北京市" />

                <Button
                    android:id="@+id/location_province_2"
                    style="@style/pop_while_mask_18sp_btn"
                    android:text="上海市" />

                <Button
                    android:id="@+id/location_province_3"
                    style="@style/pop_while_mask_18sp_btn"
                    android:text="内蒙古" />
            </TableLayout>

            <TableLayout
                android:id="@+id/location_city_ly"
                android:background="@color/mask_black">

                <Button
                    android:id="@+id/location_city_1"
                    style="@style/pop_while_mask_18sp_btn"
                    android:text="呼和浩特" />

                <Button
                    android:id="@+id/location_city_2"
                    style="@style/pop_while_mask_18sp_btn"
                    android:text="赤峰" />

                <Button
                    android:id="@+id/location_city_3"
                    style="@style/pop_while_mask_18sp_btn"
                    android:text="包头" />
            </TableLayout>


        </TableRow>

    </TableLayout>

</LinearLayout>
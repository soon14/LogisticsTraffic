<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--<ImageView-->
    <!--android:id="@+id/item_recommend_img"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:src="@drawable/source_recommend" />-->

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fake_source" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_img">

        <TextView
            android:id="@+id/item_name_tx"
            style="@style/black_tx_style_12sp"
            android:hint="车主名（车牌号）" />

        <TableRow android:layout_marginTop="5dp">

            <TextView
                style="@style/black_tx_style_12sp"
                android:text="类型：" />

            <TextView
                android:id="@+id/item_type_tx"
                style="@style/black_tx_style_12sp"
                android:hint="车辆类型" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/black_tx_style_12sp"
                android:text="车长：" />

            <TextView
                android:id="@+id/item_length_tx"
                style="@style/black_tx_style_12sp"
                android:hint="车辆长度" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/black_tx_style_12sp"
                android:text="载重：" />

            <TextView
                android:id="@+id/item_weight_tx"
                style="@style/black_tx_style_12sp"
                android:hint="车辆载重" />
        </TableRow>

        <TextView
            android:id="@+id/item_location_tx"
            style="@style/black_tx_style_12sp"
            android:layout_marginTop="5dp"
            android:hint="车辆所在地" />
    </TableLayout>

    <ImageView
        android:id="@+id/item_it_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:src="@drawable/check_box_selector" />

    <Button
        android:id="@+id/item_loading_status_tx"
        style="@style/def_btn_style_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:hint="运输状态" />

</RelativeLayout>
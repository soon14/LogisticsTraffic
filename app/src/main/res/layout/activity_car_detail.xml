<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.bt.zhangzy.logisticstraffic.activity.CarDetailActivity">
    <!--车辆详情页-->

    <include layout="@layout/page_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/car_detail_pay_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:hint="车辆付费通知,点击购买"
            android:clickable="true"
            android:onClick="onClick_Pay"
            android:padding="10dp" />

        <!-- body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_detail_bind_tx"
                style="@style/tx_black_df_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onClick_UnBind"
                android:maxLines="1"
                android:hint="该车未绑定司机"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <Button
                style="@style/default_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:onClick="onClick_Bind"
                android:text="绑定司机" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:padding="10dp"
                android:stretchColumns="1,3">

                <TableRow>

                    <TextView
                        style="@style/base_black_tx_style"
                        android:text="牌照：" />

                    <TextView
                        android:id="@+id/car_detail_num_tx"
                        style="@style/base_black_tx_style"
                        android:hint="牌照" />

                    <TextView
                        style="@style/base_black_tx_style"
                        android:text="车型：" />

                    <TextView
                        android:id="@+id/car_detail_type_tx"
                        style="@style/base_black_tx_style"
                        android:hint="车型" />
                </TableRow>


                <TableRow>

                    <TextView
                        style="@style/base_black_tx_style"
                        android:text="车长：" />

                    <TextView
                        android:id="@+id/car_detail_length_tx"
                        style="@style/base_black_tx_style"
                        android:hint="车长" />

                    <TextView
                        style="@style/base_black_tx_style"
                        android:text="载荷：" />

                    <TextView
                        android:id="@+id/car_detail_weight_tx"
                        style="@style/base_black_tx_style"
                        android:hint="载荷" />
                </TableRow>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            style="@style/base_black_tx_style"
                            android:text="常驻地：" />

                        <TextView
                            android:id="@+id/car_detail_address_tx"
                            style="@style/base_black_tx_style"
                            android:hint="地址" />
                    </TableRow>
                </TableLayout>

                <TableLayout android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/car_detail_photo_img"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/picture_upload" />

                    <TextView
                        style="@style/base_black_tx_style"
                        android:gravity="center"
                        android:hint="车辆照片" />

                    <ImageView
                        android:id="@+id/car_detail_license_img"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/picture_upload" />

                    <TextView
                        style="@style/base_black_tx_style"
                        android:gravity="center"
                        android:hint="行驶证照片" />

                </TableLayout>
            </TableLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            style="@style/default_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:onClick="onClick_Delete"
            android:visibility="gone"
            android:text="删除" />

        <Button
            style="@style/default_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:onClick="onClick_Change"
            android:text="修改" />
    </LinearLayout>
</LinearLayout>
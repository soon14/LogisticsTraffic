<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/history_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/history_item_id"
        android:orientation="vertical">

        <TextView
            style="@style/tx_black_df_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="德邦物流" />

        <TextView
            style="@style/detail_smail_tx_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="德邦物流始于xxxx年，现已经有xxxx家分店" />
    </LinearLayout>
    <TextView
        style="@style/detail_smail_tx_style"
        android:background="@color/transparent"
        android:textColor="@color/mask_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已被浏览：123456次"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
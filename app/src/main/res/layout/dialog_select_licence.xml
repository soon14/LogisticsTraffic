<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfd2d5"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/licence_show_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#4587f5"
            android:gravity="center"
            android:maxLength="8"
            android:minHeight="60dp"
            android:minWidth="200dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/licence_province_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_licence_title_selector"
            android:text="省份"
            android:textColor="@color/select_licence_selector" />

        <Button
            android:id="@+id/licence_letter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_licence_title_selector"
            android:text="字母"
            android:textColor="@color/select_licence_selector" />

        <Button
            android:id="@+id/licence_num_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_licence_title_selector"
            android:text="数字"
            android:textColor="@color/select_licence_selector" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <GridLayout
            android:id="@+id/select_licence_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:visibility="gone">

            <Button
                style="@style/select_licence_btn_style"
                android:text="1" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="2" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="3" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="4" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="5" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="6" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="7" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="8" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="9" />

            <Button
                style="@style/select_licence_btn_style"
                android:layout_columnSpan="3"
                android:layout_gravity="fill"
                android:text="0" />
        </GridLayout>

        <GridLayout
            android:id="@+id/select_licence_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="6"
            android:visibility="gone">

            <Button
                style="@style/select_licence_btn_style"
                android:text="A" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="B" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="C" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="D" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="E" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="F" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="G" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="H" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="G" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="J" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="K" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="L" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="M" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="N" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="P" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="Q" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="R" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="S" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="T" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="U" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="V" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="W" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="X" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="Y" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="Z" />
        </GridLayout>

        <!-- 省份-->
        <GridLayout
            android:id="@+id/select_licence_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="6"
            android:visibility="visible">

            <Button
                style="@style/select_licence_btn_style"
                android:text="京" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="津" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="冀" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="晋" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="蒙" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="辽" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="吉" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="黑" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="沪" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="苏" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="浙" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="皖" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="闽" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="赣" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="鲁" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="豫" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="鄂" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="湘" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="粤" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="桂" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="琼" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="渝" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="川" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="贵" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="云" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="藏" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="陕" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="甘" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="宁" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="新" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="港" />

            <Button
                style="@style/select_licence_btn_style"
                android:text="澳" />

        </GridLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/licence_back_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#adb4bd"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="返回"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/licence_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:layout_weight="1"
            android:background="#adb4bd"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/licence_del_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#adb4bd"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EvaluationActivity">

    <!--评价订单 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color"
        android:padding="5dp">

        <TextView
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评价订单" />

    </RelativeLayout>

    <include
        layout="@layout/orderlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:padding="5dp">

        <TableRow
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                style="@style/tx_black_df_style"
                android:text="信息部满意度：" />

            <RatingBar
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/evaluation_ratingbar1"
                style="@style/RatingBar_style"
                android:isIndicator="false"
                android:rating="4"
                android:stepSize="1" />
        </TableRow>

        <EditText
            style="@style/edit_style"
            android:gravity="left|top"
            android:hint="长度在10-500个字之间\n写下体会或者使用过程中带来的帮助等,可以为其他小伙伴提供参考" />
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:padding="5dp">

        <TableRow
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                style="@style/tx_black_df_style"
                android:text="司机满意度：" />

            <RatingBar
                android:id="@+id/evaluation_ratingbar2"
                style="@style/RatingBar_style"
                android:paddingBottom="20dp"
                android:isIndicator="false"
                android:rating="4"
                android:stepSize="1" />
        </TableRow>

        <EditText
            style="@style/edit_style"
            android:gravity="left|top"
            android:hint="长度在10-500个字之间\n写下体会或者使用过程中带来的帮助等,可以为其他小伙伴提供参考" />
    </TableLayout>

    <Button
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="确认评价" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.OrderDetailActivity">

    <include layout="@layout/page_top" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/tx_black_df_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="交易订单号" />

        <TextView
            style="@style/tx_black_df_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2045-06-26-110-555" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_line" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                style="@style/tx_black_df_style"
                android:layout_margin="3dp"
                android:text="货物来源" />

            <TextView
                android:id="@+id/order_detail_open_ed"
                style="@style/tx_black_df_style"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="戴尔科技" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_line" />

        <TableRow>

            <TextView
                style="@style/tx_black_df_style"
                android:layout_margin="3dp"
                android:text="接单企业" />

            <TextView
                android:id="@+id/order_detail_finish_ed"
                style="@style/tx_black_df_style"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="德邦物流" />
        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_line" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:stretchColumns="1">

        <TextView
            style="@style/tx_black_df_style"
            android:text="货物详情" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="始  发  地" />

            <TextView
                android:id="@+id/order_detail_start_bt"
                style="@style/tx_black_df_style"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="onClick_ChangeLocation"
                android:text="包头" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="目  的  地" />

            <TextView
                android:id="@+id/order_detail_end_bt"
                style="@style/tx_black_df_style"
                android:background="@color/white"
                android:clickable="true"
                android:onClick="onClick_ChangeLocation"
                android:text="北京" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="类        型" />

            <TextView
                android:id="@+id/order_detail_type_bt"
                style="@style/tx_black_df_style"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onClick_ChangeType"
                android:text="电子原件" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="名        称" />

            <TextView
                android:id="@+id/order_detail_truck_type_bt"
                style="@style/tx_black_df_style"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onClick_ChangeTruckType"
                android:text="集装箱" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="重        量" />

            <TextView
                android:id="@+id/order_detail_name_bt"
                style="@style/tx_black_df_style"
                android:clickable="true"
                android:onClick="onClick_ChangeWeight"
                android:text="10吨" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="体        积" />

            <TextView
                android:id="@+id/order_detail_kg_bt"
                style="@style/tx_black_df_style"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="onClick_ChangeTruckType"
                android:text="10x20x30M" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/editpage_bg_color" />

        <TableRow
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/tx_black_df_style"
                android:paddingRight="20dp"
                android:text="收  货  人" />

            <EditText
                android:id="@+id/order_detail_check_phone_ed"
                style="@style/tx_black_df_style"
                android:background="@color/transparent"
                android:inputType="phone"
                android:text="13945678914" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/tx_black_df_style"
                android:text="需要车辆数：" />

            <EditText
                style="@style/tx_black_df_style"
                android:background="@color/transparent"
                android:inputType="phone"
                android:text="1" />
            <!-- 选择 车队司机 -->
            <Button
                style="@style/tx_black_df_style"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/add_devices" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- todo 添加按钮跳转到选择司机页面 order_select_drivers -->
        <Button
            android:id="@+id/order_detail_yes"
            style="@style/orange_btn_noPadding_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="提交订单" />
    </LinearLayout>

</LinearLayout>
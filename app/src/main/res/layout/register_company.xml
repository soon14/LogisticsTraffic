<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--初始用户 注册-->
    <include layout="@layout/page_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/reg_phoneNum_ed"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="手机号"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="11" />

            <View style="@style/line_style_horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/reg_verification_ed"
                    style="@style/edit_style"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number" />

                <Button
                    style="@style/home_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_SendVerificationCode"
                    android:text="获取验证码" />
            </LinearLayout>

            <View style="@style/line_style_horizontal" />

            <EditText
                android:id="@+id/reg_nickname_ed"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="姓名"
                android:imeOptions="actionNext" />

            <View style="@style/line_style_horizontal" />

            <EditText
                android:id="@+id/reg_company_name_ed"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="公司名" />

            <View style="@style/line_style_horizontal" />

            <EditText
                android:id="@+id/reg_city_ed"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="省份·城市"
                android:onClick="onClick_ChangeLocation" />


            <View style="@style/line_style_horizontal" />

            <EditText
                android:id="@+id/reg_address_ed"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="详细地址" />

            <View style="@style/line_style_horizontal" />

            <EditText
                android:id="@+id/reg_recommend_ed"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="推荐人手机号"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="11" />

            <View style="@style/line_style_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reg_company_business_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="10dp"
                    android:background="@color/transparent"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:onClick="onClick_Photo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/detail_yyzz" />


                <ImageView
                    android:id="@+id/reg_company_photo_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_rowWeight="1"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:onClick="onClick_Photo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/detail_mtzp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/reg_confirm_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_OpenLaw"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="已阅读并同意法律申明"
                    android:textColor="@color/black"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/home_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:onClick="onClick_RegisterBtn"
        android:text="注   册" />

</LinearLayout>
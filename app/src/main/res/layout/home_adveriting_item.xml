<?xml version="1.0" encoding="utf-8"?>
<com.bt.zhangzy.logisticstraffic.view.AdViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:autoStart="true"
    android:clickable="true"
    android:flipInterval="3000"
    android:inAnimation="@anim/slide_in_right"
    android:longClickable="true"
    android:outAnimation="@anim/slide_out_left">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/fake_ad_1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/fake_ad_2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/fake_ad_3" />
</com.bt.zhangzy.logisticstraffic.view.AdViewFlipper>
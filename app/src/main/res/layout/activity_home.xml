<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.HomeActivity">


    <LinearLayout
        android:id="@+id/home_bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_bottom_bt_bg"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_bottom_first_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/home_home_btn_selector"
            android:onClick="onClick_Home"
            android:text="首页" />


        <!--<Button-->
        <!--android:id="@+id/home_bottom_happy_btn"-->
        <!--style="@style/home_bottom_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:drawableTop="@drawable/play_icon"-->
        <!--android:onClick="onClick_Happy"-->
        <!--android:paddingTop="10dp"-->
        <!--android:text="解闷儿" />-->

        <Button
            android:id="@+id/home_bottom_me_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/home_bottom_bt_bg"
            android:drawableTop="@drawable/home_user_btn_selector"
            android:onClick="onClick_Me"
            android:text="我的" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_bottom_ly">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v4.view.ViewPager>
    </FrameLayout>

    <Button
        android:id="@+id/home_bottom_services_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_bottom_custom_bt_bg"
        android:onClick="onClick_Services"
        android:paddingTop="10dp"
        android:text="服务" />
</RelativeLayout>
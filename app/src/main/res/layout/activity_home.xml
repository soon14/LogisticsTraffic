<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.HomeActivity">


    <LinearLayout
        android:id="@+id/home_bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_bg_color"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_bottom_first_btn"
            style="@style/home_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_icon"
            android:onClick="onClick_Home"
            android:paddingTop="10dp"
            android:text="首页" />

        <Button
            android:id="@+id/home_bottom_services_btn"
            style="@style/home_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/surround_icon"
            android:onClick="onClick_Services"
            android:paddingTop="10dp"
            android:text="周边" />

        <Button
            android:id="@+id/home_bottom_happy_btn"
            style="@style/home_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/play_icon"
            android:onClick="onClick_Happy"
            android:paddingTop="10dp"
            android:text="解闷儿" />

        <Button
            android:id="@+id/home_bottom_me_btn"
            style="@style/home_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/user_icon"
            android:onClick="onClick_Me"
            android:paddingTop="10dp"
            android:text="我的订单" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_bottom_ly">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v4.view.ViewPager>
    </FrameLayout>

</RelativeLayout>
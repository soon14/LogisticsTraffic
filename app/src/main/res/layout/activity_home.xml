<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-25dp"
            android:layout_weight="2">


        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/home_bottom_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/home_bottom_bt_bg"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home_bottom_first_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:onClick="onClick_Home"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/home_home_btn_selector"
                android:text="首页"
                android:textSize="11sp" />

            <ImageButton
                android:id="@+id/home_bottom_custom_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:onClick="onClick_Custom"
                android:paddingTop="12dp"
                android:src="@drawable/home_source_btn_selector"
                android:text="服务" />


            <ImageButton
                android:id="@+id/home_bottom_me_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:onClick="onClick_Me"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/home_user_btn_selector"
                android:text="我的"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>